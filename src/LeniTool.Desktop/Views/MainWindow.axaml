<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LeniTool.Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
        x:Class="LeniTool.Desktop.Views.MainWindow"
        x:DataType="vm:MainViewModel"
    Title="LeniTool"
        Width="900" Height="700">

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="15">

            <!-- Header -->
            <TextBlock Text="HTML File Splitter"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <!-- Configuration Section -->
            <Border BorderBrush="#512BD4" BorderThickness="2" CornerRadius="8" Padding="15">
                <StackPanel Spacing="10">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Text="âš™ï¸ Configuration"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center"/>
                        <Button Grid.Column="1"
                                Content="Toggle"
                                Command="{Binding ToggleConfigCommand}"
                                Width="100"/>
                    </Grid>

                    <StackPanel Spacing="10" IsVisible="{Binding IsConfigExpanded}">
                        <!-- Max Chunk Size -->
                        <TextBlock Text="Max Chunk Size (MB):" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Slider Value="{Binding MaxChunkSizeMB}"
                                    Minimum="0.5"
                                    Maximum="10"
                                    Width="200"/>
                            <TextBlock Text="{Binding MaxChunkSizeMB, StringFormat='{}{0:F1} MB'}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Segmentation Tags -->
                        <TextBlock Text="Segmentation Tags (one per line):" FontWeight="Bold"/>
                        <TextBox Text="{Binding SegmentationTagsText}"
                                 Height="100"
                                 AcceptsReturn="True"
                                 TextWrapping="NoWrap"
                                 Watermark="&lt;section&#x0A;&lt;div&#x0A;&lt;article"/>

                        <!-- Opening Tags -->
                        <TextBlock Text="Opening Tags (added to chunks):" FontWeight="Bold"/>
                        <TextBox Text="{Binding OpeningTagsText}"
                                 Height="60"
                                 AcceptsReturn="True"
                                 Watermark="&lt;html&gt;&#x0A;&lt;body&gt;"/>

                        <!-- Closing Tags -->
                        <TextBlock Text="Closing Tags (added to chunks):" FontWeight="Bold"/>
                        <TextBox Text="{Binding ClosingTagsText}"
                                 Height="60"
                                 AcceptsReturn="True"
                                 Watermark="&lt;/body&gt;&#x0A;&lt;/html&gt;"/>

                        <!-- Naming Pattern -->
                        <TextBlock Text="Naming Pattern:" FontWeight="Bold"/>
                        <TextBox Text="{Binding NamingPattern}"
                                 Watermark="filename_partNNN.html"/>

                        <!-- Output Directory -->
                        <TextBlock Text="Output Directory:" FontWeight="Bold"/>
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBox Grid.Column="0"
                                     Text="{Binding OutputDirectory}"
                                     Watermark="Auto (Documents/LeniTool/Output)"/>
                            <Button Grid.Column="1" Content="Browse" Margin="10,0,0,0"/>
                        </Grid>

                        <!-- Max Parallel Files -->
                        <TextBlock Text="Max Parallel Files:" FontWeight="Bold"/>
                        <NumericUpDown Value="{Binding MaxParallelFiles}"
                                       Minimum="1"
                                       Maximum="8"
                                       Increment="1"/>

                        <!-- Config Buttons -->
                        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button Content="ðŸ’¾ Save Config"
                                    Command="{Binding SaveConfigCommand}"/>
                            <Button Content="ðŸ“‚ Load Config"
                                    Command="{Binding LoadConfigCommand}"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- File Selection Section -->
            <Border BorderBrush="#DFD8F7" BorderThickness="2" CornerRadius="8" Padding="15">
                <StackPanel Spacing="10">
                    <TextBlock Text="ðŸ“ Files"
                               FontSize="20"
                               FontWeight="Bold"/>

                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button Content="Add Files"
                                Click="OnAddFilesClicked"/>
                        <Button Content="Clear All"
                                Command="{Binding ClearFilesCommand}"/>
                    </StackPanel>

                    <Grid ColumnDefinitions="*,320">
                        <!-- File List + Drop Target -->
                        <Border Grid.Column="0" BorderBrush="#E6E6E6" BorderThickness="1" CornerRadius="6" Padding="8">
                            <StackPanel Spacing="6">
                                <TextBlock Text="Drag files here" Foreground="Gray" FontSize="12"/>
                                <ListBox ItemsSource="{Binding Files}"
                                         x:Name="FilesList"
                                         SelectedItem="{Binding SelectedFile}"
                                         DragDrop.AllowDrop="True"
                                         Height="200">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Spacing="4">
                                                <TextBlock Text="{Binding FileName}" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding Status}" FontSize="12" Foreground="Gray"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>

                        <!-- Analysis + Overrides Panel -->
                        <Border Grid.Column="1" BorderBrush="#E6E6E6" BorderThickness="1" CornerRadius="6" Padding="10" Margin="15,0,0,0">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Spacing="10">
                                    <TextBlock Text="Analysis &amp; Overrides" FontWeight="Bold" FontSize="16"/>

                                    <StackPanel Spacing="6" IsVisible="{Binding HasSelectedFile}">
                                        <TextBlock Text="{Binding SelectedFile.FileName}" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding SelectedFile.FilePath}" FontSize="11" Foreground="Gray" TextWrapping="Wrap"/>

                                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto">
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Size:" FontWeight="Bold"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedFile.FileSizeDisplay}" Margin="8,0,0,4"/>

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Encoding:" FontWeight="Bold"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedFile.EncodingDisplay}" Margin="8,0,0,4"/>

                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Target:" FontWeight="Bold"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedFile.OverrideMaxChunkSizeMB, StringFormat='{}{0:F1} MB'}" Margin="8,0,0,4"/>

                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Est. parts:" FontWeight="Bold"/>
                                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedFile.EstimatedPartCount}" Margin="8,0,0,0"/>
                                        </Grid>

                                        <TextBlock Text="Candidates" FontWeight="Bold" Margin="0,6,0,0"/>
                                        <ItemsControl ItemsSource="{Binding SelectedFile.CandidateRecords}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" Margin="0,0,0,6">
                                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding TagName}" FontWeight="Bold"/>
                                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Confidence, StringFormat='{}{0:P0}'}" Foreground="Gray"/>
                                                        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                                   Text="{Binding CountEstimate, StringFormat='Count: {0}'}" FontSize="11" Foreground="Gray"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <Separator/>

                                        <TextBlock Text="Override" FontWeight="Bold"/>
                                        <ToggleSwitch Content="Auto-detect record tag"
                                                     IsChecked="{Binding SelectedFile.OverrideAutoDetectRecordTag}"/>
                                        <TextBlock Text="Record tag (manual)" FontSize="12" FontWeight="Bold"/>
                                        <TextBox Text="{Binding SelectedFile.OverrideRecordTagName}"
                                                 IsEnabled="{Binding SelectedFile.IsManualRecordTag}"/>

                                        <TextBlock Text="Target size (MB)" FontSize="12" FontWeight="Bold"/>
                                        <NumericUpDown Value="{Binding SelectedFile.OverrideMaxChunkSizeMB}"
                                                       Minimum="0.5"
                                                       Maximum="100"
                                                       Increment="0.5"/>

                                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,8,0,0">
                                            <Button Content="Re-analyze"
                                                    Command="{Binding AnalyzeSelectedFileCommand}"/>
                                            <Button Content="Save for this file"
                                                    Command="{Binding SaveSelectedFileOverrideCommand}"/>
                                        </StackPanel>

                                        <Button Content="Save as extension default"
                                                Command="{Binding SaveSelectedExtensionOverrideCommand}"/>
                                    </StackPanel>

                                    <TextBlock Text="Select a file to see details." Foreground="Gray" FontSize="12"
                                               IsVisible="{Binding HasNoSelectedFile}"/>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Process Button -->
            <Button Content="ðŸš€ Process Files"
                    Command="{Binding ProcessFilesCommand}"
                    FontSize="18"
                    Height="50"
                    HorizontalAlignment="Stretch"
                    Margin="0,10,0,0"/>

            <!-- Status Section -->
            <Border BorderBrush="#2B0B98" BorderThickness="2" CornerRadius="8" Padding="15">
                <StackPanel Spacing="10">
                    <TextBlock Text="ðŸ“Š Status &amp; Log"
                               FontSize="20"
                               FontWeight="Bold"/>
                    
                    <TextBlock Text="{Binding StatusText}"
                               FontSize="14"
                               FontStyle="Italic"/>

                    <!-- Log -->
                    <ListBox ItemsSource="{Binding LogEntries}"
                             Height="150">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" FontSize="11" FontFamily="Courier New"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>

</Window>
