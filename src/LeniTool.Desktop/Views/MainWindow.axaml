<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:LeniTool.Desktop.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
        x:Class="LeniTool.Desktop.Views.MainWindow"
        x:DataType="vm:MainViewModel"
    Title="LeniTool"
        Width="900" Height="700">

    <Grid Margin="16" RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <Border Classes="card" Grid.Row="0" Margin="0,0,0,12">
            <Grid ColumnDefinitions="*,12,Auto" RowDefinitions="Auto,Auto">
                <StackPanel Grid.Column="0" Spacing="2">
                    <TextBlock Text="LeniTool" Classes="h1" />
                    <TextBlock Text="Split large HTML/markup files into size-based parts" Classes="subtle" />
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                    <Button Content="Add Files" Click="OnAddFilesClicked" Classes="ghost" />
                    <Button Content="Clear All" Command="{Binding ClearFilesCommand}" Classes="ghost" />
                    <Button Content="Process Files" Command="{Binding ProcessFilesCommand}" Classes="primary" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main content -->
        <ScrollViewer Grid.Row="1">
        <Grid RowDefinitions="Auto,*">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="360"/>
            </Grid.ColumnDefinitions>

            <!-- Configuration Section -->
            <Border Classes="card" Grid.Row="0" Grid.ColumnSpan="3" Margin="0,0,0,12">
                <StackPanel Spacing="10">
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Text="âš™ï¸ Configuration"
                                   Classes="h2"
                                   VerticalAlignment="Center"/>
                        <Button Grid.Column="1"
                                Content="Toggle"
                                Command="{Binding ToggleConfigCommand}"
                                Width="100"
                                Classes="ghost"/>
                    </Grid>

                    <StackPanel Spacing="10" IsVisible="{Binding IsConfigExpanded}">
                        <!-- Max Chunk Size -->
                        <TextBlock Text="Max Chunk Size (MB):" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <Slider Value="{Binding MaxChunkSizeMB}"
                                    Minimum="0.5"
                                    Maximum="10"
                                    Width="200"/>
                            <TextBlock Text="{Binding MaxChunkSizeMB, StringFormat='{}{0:F1} MB'}"
                                       VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Input File Size Limits -->
                        <TextBlock Text="Input File Limits" FontWeight="SemiBold" FontSize="14" Margin="0,6,0,0"/>

                        <TextBlock Text="Max input file size (GB):" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <NumericUpDown Value="{Binding MaxInputFileSizeGB}"
                                           Minimum="0"
                                           Maximum="1024"
                                           Increment="0.5"/>
                            <TextBlock Text="0 = no limit" Classes="subtle" VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Text="Auto-analyze threshold (MB):" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <NumericUpDown Value="{Binding AutoAnalyzeThresholdMB}"
                                           Minimum="0"
                                           Maximum="1048576"
                                           Increment="10"/>
                            <TextBlock Text="0 = disable auto-analyze" Classes="subtle" VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Segmentation Tags -->
                        <TextBlock Text="Segmentation Tags (one per line):" FontWeight="Bold"/>
                        <TextBox Text="{Binding SegmentationTagsText}"
                                 Height="100"
                                 AcceptsReturn="True"
                                 TextWrapping="NoWrap"
                                 Watermark="&lt;section&#x0A;&lt;div&#x0A;&lt;article"/>

                        <!-- Opening Tags -->
                        <TextBlock Text="Opening Tags (added to chunks):" FontWeight="Bold"/>
                        <TextBox Text="{Binding OpeningTagsText}"
                                 Height="60"
                                 AcceptsReturn="True"
                                 Watermark="&lt;html&gt;&#x0A;&lt;body&gt;"/>

                        <!-- Closing Tags -->
                        <TextBlock Text="Closing Tags (added to chunks):" FontWeight="Bold"/>
                        <TextBox Text="{Binding ClosingTagsText}"
                                 Height="60"
                                 AcceptsReturn="True"
                                 Watermark="&lt;/body&gt;&#x0A;&lt;/html&gt;"/>

                        <!-- Naming Pattern -->
                        <TextBlock Text="Naming Pattern:" FontWeight="Bold"/>
                        <TextBox Text="{Binding NamingPattern}"
                                 Watermark="filename_partNNN.html"/>

                        <!-- Output Directory -->
                        <TextBlock Text="Output Directory:" FontWeight="Bold"/>
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBox Grid.Column="0"
                                     Text="{Binding OutputDirectory}"
                                     Watermark="Auto (Documents/LeniTool/Output)"/>
                            <Button Grid.Column="1" Content="Browse" Margin="10,0,0,0" Classes="ghost"/>
                        </Grid>

                        <!-- Max Parallel Files -->
                        <TextBlock Text="Max Parallel Files:" FontWeight="Bold"/>
                        <NumericUpDown Value="{Binding MaxParallelFiles}"
                                       Minimum="1"
                                       Maximum="8"
                                       Increment="1"/>

                        <!-- Config Buttons -->
                        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button Content="ðŸ’¾ Save Config"
                                    Command="{Binding SaveConfigCommand}"
                                    Classes="ghost"/>
                            <Button Content="ðŸ“‚ Load Config"
                                    Command="{Binding LoadConfigCommand}"
                                    Classes="ghost"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Files -->
            <Border Classes="card" Grid.Column="0" Grid.Row="1" Margin="0,0,0,0">
                <StackPanel Spacing="10">
                    <TextBlock Text="ðŸ“ Files" Classes="h2" />
                    <TextBlock Text="Tip: Drag files onto the list" Classes="subtle" FontSize="12" />

                    <Border Classes="listHeader">
                        <Grid ColumnDefinitions="3*,110,90,160,140">
                            <TextBlock Text="Name" Classes="muted" FontSize="12" />
                            <TextBlock Grid.Column="1" Text="Size" Classes="muted" FontSize="12" Margin="10,0,0,0" />
                            <TextBlock Grid.Column="2" Text="Est Parts" Classes="muted" FontSize="12" Margin="10,0,0,0" />
                            <TextBlock Grid.Column="3" Text="Top Tag" Classes="muted" FontSize="12" Margin="10,0,0,0" />
                            <TextBlock Grid.Column="4" Text="Status" Classes="muted" FontSize="12" Margin="10,0,0,0" />
                        </Grid>
                    </Border>

                    <ListBox ItemsSource="{Binding Files}"
                             x:Name="FilesList"
                             SelectedItem="{Binding SelectedFile}"
                             DragDrop.AllowDrop="True"
                             Classes="filesList"
                             Height="260">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="3*,110,90,160,140">
                                    <TextBlock Text="{Binding FileName}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" />
                                    <TextBlock Grid.Column="1" Text="{Binding FileSizeShortDisplay}" Classes="muted" Margin="10,0,0,0" />
                                    <TextBlock Grid.Column="2" Text="{Binding EstimatedPartCount}" Classes="muted" Margin="10,0,0,0" />
                                    <TextBlock Grid.Column="3" Text="{Binding TopCandidateDisplay}" Classes="muted" Margin="10,0,0,0" TextTrimming="CharacterEllipsis" />
                                    <Border Grid.Column="4" Classes="badge" HorizontalAlignment="Left" Margin="10,0,0,0"
                                            Background="{Binding StatusBadgeBackground}">
                                        <TextBlock Text="{Binding StatusBadgeText}" Foreground="{Binding StatusBadgeForeground}" />
                                    </Border>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Analysis + Overrides Panel -->
            <Border Classes="card" Grid.Column="2" Grid.Row="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Spacing="10">
                        <TextBlock Text="Analysis &amp; Overrides" Classes="h2"/>

                                    <StackPanel Spacing="6" IsVisible="{Binding HasSelectedFile}">
                                        <TextBlock Text="{Binding SelectedFile.FileName}" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding SelectedFile.FilePath}" FontSize="11" Classes="subtle" TextWrapping="Wrap"/>

                                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto,Auto">
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Size:" FontWeight="Bold"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SelectedFile.FileSizeDisplay}" Margin="8,0,0,4"/>

                                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Encoding:" FontWeight="Bold"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedFile.EncodingDisplay}" Margin="8,0,0,4"/>

                                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Target:" FontWeight="Bold"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SelectedFile.OverrideMaxChunkSizeMB, StringFormat='{}{0:F1} MB'}" Margin="8,0,0,4"/>

                                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Est. parts:" FontWeight="Bold"/>
                                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedFile.EstimatedPartCount}" Margin="8,0,0,0"/>
                                        </Grid>

                                        <TextBlock Text="Candidates" FontWeight="Bold" Margin="0,6,0,0"/>
                                        <ItemsControl ItemsSource="{Binding SelectedFile.CandidateRecords}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" Margin="0,0,0,6">
                                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding TagName}" FontWeight="Bold"/>
                                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Confidence, StringFormat='{}{0:P0}'}" Classes="subtle"/>
                                                        <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                                                   Text="{Binding CountEstimate, StringFormat='Count: {0}'}" FontSize="11" Classes="subtle"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>

                                        <Separator/>

                                        <TextBlock Text="Override" FontWeight="Bold"/>
                                        <ToggleSwitch Content="Auto-detect record tag"
                                                     IsChecked="{Binding SelectedFile.OverrideAutoDetectRecordTag}"/>
                                        <TextBlock Text="Record tag (manual)" FontSize="12" FontWeight="Bold"/>
                                        <TextBox Text="{Binding SelectedFile.OverrideRecordTagName}"
                                                 IsEnabled="{Binding SelectedFile.IsManualRecordTag}"/>

                                        <TextBlock Text="Target size (MB)" FontSize="12" FontWeight="Bold"/>
                                        <NumericUpDown Value="{Binding SelectedFile.OverrideMaxChunkSizeMB}"
                                                       Minimum="0.5"
                                                       Maximum="100"
                                                       Increment="0.5"/>

                                        <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,8,0,0">
                                            <Button Content="Re-analyze"
                                                    Command="{Binding AnalyzeSelectedFileCommand}"
                                                    Classes="ghost"/>
                                            <Button Content="Save for this file"
                                                    Command="{Binding SaveSelectedFileOverrideCommand}"
                                                    Classes="ghost"/>
                                        </StackPanel>

                                        <Button Content="Save as extension default"
                                                Command="{Binding SaveSelectedExtensionOverrideCommand}"
                                                Classes="ghost"/>
                                    </StackPanel>

                                    <TextBlock Text="Select a file to see details." Classes="subtle" FontSize="12"
                                               IsVisible="{Binding HasNoSelectedFile}"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>
        </ScrollViewer>

        <!-- Status & Log -->
        <Border Classes="card" Grid.Row="2">
            <StackPanel Spacing="10">
                <Grid ColumnDefinitions="*,Auto" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“Š Status &amp; Log" Classes="h2" />
                    <TextBlock Grid.Column="1" Text="{Binding StatusText}" Classes="subtle" VerticalAlignment="Center" />
                </Grid>

                <ListBox ItemsSource="{Binding LogEntries}" Height="180">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontSize="11" FontFamily="Consolas"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

    </Grid>

</Window>
